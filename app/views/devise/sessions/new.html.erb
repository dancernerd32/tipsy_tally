<div class= "row">
  <div class= "large-6 columns">
    <h1>Log in</h1>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class= "row">
    <div class= "large-6 columns">
      <div class="field">
        <%= f.label :login %><br />
        <%= f.text_field :login %>
      </div>
    </div>
  </div>
  <div class= "row">
    <div class= "large-6 columns">
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
  <div class= "row">
    <div class= "large-6 columns">
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    </div>
  </div>
  <% end -%>
  <div class= "row">
    <div class= "large-6 columns">
      <div class="actions">
        <%= f.submit "Log in" %>
      </div>
    </div>
  </div>
<% end %>

<div class= "row">
  <div class= "large-6 columns">
    <%= render "devise/shared/links" %>
  </div>
</div>
