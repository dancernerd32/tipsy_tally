<!DOCTYPE html>
<html>
<head>
  <title>TipsyTally</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <link href='http://fonts.googleapis.com/css?family=Sorts+Mill+Goudy:400,400italic' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Josefin+Sans' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>

  <nav class="top-bar">
    <ul class="title-area">
      <li class="name">
        <h1><a href="/">TipsyTally</a></h1>
      </li>
    </ul>

    <section class="top-bar-section">
      <ul class="right">
        <li> <%= link_to 'New Drink', new_drink_path %> </li>
        <%- if current_user -%>
          <li class=active>
            <% if current_user.role == "admin" %>
            <%= link_to "Admin Panel", admin_path %>
            <% end %>
          </li>
          <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
          <li>
            <%=
              link_to(image_tag(current_user.avatar.url(:thumb), id: "avatar"),
              user_path(current_user))
              %>
          </li>

        <%- else -%>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
        <%- end -%>
      </ul>
    <ul class="left">
      <li> <%= form_tag drinks_path, method: 'get' do %>
        <%= text_field_tag :search, params[:search] %>
        <%= submit_tag "Search", name: nil %>
      </li>
      <% end %>
    </section>
  </nav>

  <%- flash.each do |key, value| -%>
    <div class="flash flash-<%= key %>">
      <%= value %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= javascript_tag do %>
    $(function(){
      $(document).foundation();
    });
  <% end %>
  <%= yield :extra_footer %>
</body>
</html>
