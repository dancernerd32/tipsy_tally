<h1>Edit Drink</h1>

<% if @drink.errors.any? %>
<ul>
  <% @drink.errors.full_messages.each do |message| %>
  <li> <%= message %> </li>
  <% end %>
</ul>
<% end %>


<%= form_for @drink do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <% if @drink.alcoholic? %>
    <p>Liquors</p>
    <div>
      <%= f.collection_check_boxes :liquor_ids,
      @liquors,
      :id,
      :name
      %>
    </div>
  <% end %>
  <div>
    <%= f.submit "Submit", class: "small button" %>
  </div>
<% end %>
