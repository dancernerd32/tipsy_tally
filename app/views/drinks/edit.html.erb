<h1>Edit Drink</h1>

<%= form_for @drink do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <% if @drink.alcoholic? %>
    <p>Liquors</p>
    <div>
      <%= f.collection_check_boxes :liquor_ids,
      @liquors,
      :id,
      :name
      %>
    </div>
  <% end %>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>
