<h1> New Drink </h1>
<% if @drink.errors.any? %>
  <ul>
    <% @drink.errors.full_messages.each do |message| %>
      <li> <%= message %> </li>
    <% end %>
  </ul>
<% end %>


<%= form_for @drink do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :alcoholic, 'Yes' %>
    <%= f.radio_button(:alcoholic,'true') %>
    <%= f.label :alcoholic, 'No' %>
    <%= f.radio_button(:alcoholic,'false') %>
  </div>
  <div>
    <% for liquor in Liquor.find(:all) %>
      <%= check_box_tag "drink[liquor_ids][]", liquor.id, @drink.liquors.include?(liquor) %>
    <%#= f.fields_for :liquor_drinks do |ff| %>
        <%#= ff.check_box :liquor_id %>
    <% end %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.submit "Submit" %>
  </div>

<% end %>
